	"version": "0.2.0",
	"configurations": [
		{
			"name": "Backend",
			"type": "go",
			"request": "launch",
			"mode": "auto",
			"program": "main.go",
			"envFile": "${workspaceFolder}/.env"
		},
		{
			"name": "Frontend",
			"type": "node-terminal",
			"request": "launch",
			"command": "npm run dev"
		}
	],
	"compounds": [
		{
			"name": "Start all",
			"configurations": ["Backend", "Frontend"]
		}
	]
}
